<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_layout"
    android:layout_width="350dp"
    android:layout_height="470dp"
    android:gravity="center_horizontal|center"
    android:orientation="vertical"
    android:background="@drawable/test222"
    android:visibility="visible">

    <ImageView
        android:id="@+id/display_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/display_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="识别结果"
        android:textColor="#333"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/display_prob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="5dp"
        android:text="识别概率"
        android:textColor="#333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|center">

        <Button
            android:id="@+id/exitBtn1"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:onClick="exitbutton1"
            android:text="继续"
            android:textColor="#333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/exitBtn0"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_style_white"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:onClick="exitbutton0"
            android:text="退出"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
